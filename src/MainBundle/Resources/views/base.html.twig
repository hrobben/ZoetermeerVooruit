<!-- Fixed navbar -->
<nav class="navbar navbar-inverse">
    <div class="container extra-padding-left">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand negative-margin" href="{{ path('main_default_index') }}"><img src="{{ asset('bundles/main/images/ZV Logo Volledigetekst achtergrond.png') }}"></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                {% if app.user %}
                    <li {% if app.request.attributes.get( '_route' ) starts with '/' %} class="active" {% endif %}><a href="{{ path('main_default_index') }}">Home</a></li>
                    <li {% if app.request.attributes.get( '_route' ) starts with 'enquete' %} class="active" {% endif %}><a href="{{ path('enquete_index') }}">EnquÃªtes</a></li>
                    {% if is_granted ('ROLE_ADMIN') %}
                    <li {% if app.request.attributes.get( '_route' ) starts with 'overview' %} class="active" {% endif %}><a href="{{ path('overview_index') }}">Beheer</a></li>
                    <li {% if app.request.attributes.get( '_route' ) starts with 'payment' %} class="active" {% endif %}><a href="{{ path('payment_index') }}">Betalingen</a></li>
                    {% endif %}
                        <li><a href="{{ path('info_index') }}">Informatie</a></li>
                        <li><a href="{{ path('raadswerk_index') }}">Raadswerk</a></li>
                        <li><a href="{{ path('standpunten_index') }}">Standpunten</a></li>
                        <li><a href="{{ path('steun_index') }}">Steun Ons</a></li>
                        <li><a href="{{ path('aboutus_index') }}">Over Ons</a></li>
                        <li {% if app.request.attributes.get( '_route' ) starts with 'logout' %} class="active" {% endif %}><a href="{{ path('fos_user_security_logout') }}">Uitloggen</a></li>
                {% else %}
                    <li><a href="{{ path('info_index') }}">Informatie</a></li>
                    <li><a href="{{ path('raadswerk_index') }}">Raadswerk</a></li>
                    <li><a href="{{ path('standpunten_index') }}">Standpunten</a></li>
                    <li><a href="{{ path('steun_index') }}">Steun Ons</a></li>
                    <li><a href="{{ path('aboutus_index') }}">Over Ons</a></li>
                    <li {% if app.request.attributes.get( '_route' ) starts with 'login' %} class="active" {% endif %}><a href="{{ path('fos_user_security_login') }}">Inloggen</a></li>
                {% endif %}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container theme-showcase" role="main">

