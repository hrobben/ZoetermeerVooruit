{% extends '@Main/base.html.twig' %}

{% block body %}
    {% if is_granted ('ROLE_ADMIN') %}
    <h1>Keuzemogelijkheden</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="hidden-xs hidden-sm sorting"
                    tabindex="0" aria-controls="lijst"
                    rowspan="1" colspan="1" aria-label=": activate to sort column ascending"
                    style="width: 69px;">Id</th>
                <th>Vraagnummer</th>
                <th>Keuzemogelijkheid</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for choice in choices %}
            <tr>
                <td class="hidden-xs hidden-sm"><a href="{{ path('choice_show', { 'id': choice.id }) }}">{{ choice.id }}</a></td>
                <td>{{ choice.questionId }}</td>
                <td>{{ choice.choice }}</td>
                <td>
                    <a  class="btn btn-info" href="{{ path('choice_show', { 'id': choice.id }) }}">Weergeven</a>

                    <a class="btn btn-primary" href="{{ path('choice_edit', { 'id': choice.id }) }}">Wijzigen</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a class="btn btn-success" href="{{ path('choice_new') }}">Maak een nieuw antwoord</a>


    {% else %}
        <div>
            <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
            <p>Log in als Administrator om de pagina weer te geven.</p>
        </div>
    {% endif %}
{% endblock %}
