{% extends '@Main/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/main/css/button.css') }}">
{% endblock %}

{% block body %}
    {% if is_granted ('ROLE_ADMIN') %}
    <h1>Antwoord</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ choice.id }}</td>
            </tr>
            <tr>
                <th>Questionid</th>
                <td>{{ choice.questionId }}</td>
            </tr>
            <tr>
                <th>Choice</th>
                <td>{{ choice.choice }}</td>
            </tr>
        </tbody>
    </table>

            <a class="btn btn-default" href="{{ path('choice_index') }}">Terug naar overzicht</a>

            <a class="btn btn-primary" href="{{ path('choice_edit', { 'id': choice.id }) }}">Wijzigen</a>

            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Verwijderen">
            {{ form_end(delete_form) }}


    {% else %}
        <div>
            <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
            <p>Log in als Administrator om de pagina weer te geven.</p>
        </div>
    {% endif %}
{% endblock %}
