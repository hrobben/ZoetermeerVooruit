{% extends '@Main/base.html.twig' %}

    {% block body %}
        {% if is_granted ('ROLE_ADMIN') %}
            <div class="container">
                <h1>Fractielijst</h1>
                <div class="row">
                    {% for fractie in fracties %}
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <div class="caption">
                                    <div class="row">
                                        <div class="col-sm-10">
                                            <h4>{{ fractie.name }}</h4><br>
                                            {{ fractie.description }}<br>
                                            <a href="{{ path('fractie_show', { 'id': fractie.id }) }}" class="btn btn-info btn-xs">show</a>
                                            <a href="{{ path('fractie_edit', { 'id': fractie.id }) }}" class="btn btn-primary btn-xs">edit</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a href="{{ path('fractie_new') }}" class="btn btn-success"> + Fractie</a>
            </div>

        {% else %}
            <div>
                <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
                <p>Log in als Administrator om de pagina weer te geven.</p>
            </div>
        {% endif %}
    {% endblock %}

