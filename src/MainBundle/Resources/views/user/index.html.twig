{% extends '@Main/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/main/css/button.css') }}">
{% endblock %}

{% block body %}
    {% if is_granted ('ROLE_ADMIN') %}
    <h1>Gebruikerslijst</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th class="hidden-xs hidden-sm sorting"
                    tabindex="0" aria-controls="lijst"
                    rowspan="1" colspan="1" aria-label=": activate to sort column ascending"
                    style="width: 69px;">Id</th>
                <th>Voornaam</th>
                <th>Achternaam</th>
                <th class="hidden-xs hidden-sm sorting"
                    tabindex="0" aria-controls="lijst"
                    rowspan="1" colspan="1" aria-label=": activate to sort column ascending"
                    style="width: 69px;">Geslacht</th>
                <th class="hidden-xs hidden-sm sorting"
                    tabindex="0" aria-controls="lijst"
                    rowspan="1" colspan="1" aria-label=": activate to sort column ascending"
                    style="width: 69px;">Geboortedatum</th>
                <th class="hidden-xs hidden-sm sorting"
                    tabindex="0" aria-controls="lijst"
                    rowspan="1" colspan="1" aria-label=": activate to sort column ascending"
                    style="width: 69px;">Adres</th>
                <th class="hidden-xs hidden-sm sorting"
                    tabindex="0" aria-controls="lijst"
                    rowspan="1" colspan="1" aria-label=": activate to sort column ascending"
                    style="width: 69px;">Postcode</th>
                <th class="hidden-xs hidden-sm sorting"
                    tabindex="0" aria-controls="lijst"
                    rowspan="1" colspan="1" aria-label=": activate to sort column ascending"
                    style="width: 69px;">Woonplaats</th>
                <th class="hidden-xs hidden-sm sorting"
                tabindex="0" aria-controls="lijst"
                rowspan="1" colspan="1" aria-label=": activate to sort column ascending"
                style="width: 69px;">Telefoonnummer</th>
                <th class="hidden-xs hidden-sm sorting"
                    tabindex="0" aria-controls="lijst"
                    rowspan="1" colspan="1" aria-label=": activate to sort column ascending"
                    style="width: 69px;">Bankrekening</th>
                <th>Beheeracties</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="hidden-xs hidden-sm"><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td class="hidden-xs hidden-sm">{{ user.gender }}</td>
                <td class="hidden-xs hidden-sm">{% if user.birthdate %}{{ user.birthdate|date('d-m-Y') }}{% endif %}</td>
                <td class="hidden-xs hidden-sm">{{ user.address }}</td>
                <td class="hidden-xs hidden-sm">{{ user.postal }}</td>
                <td class="hidden-xs hidden-sm">{{ user.city }}</td>
                <td class="hidden-xs hidden-sm">{{ user.phone }}</td>
                <td class="hidden-xs hidden-sm">{{ user.bankaccount }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('user_show', { 'id': user.id }) }}">Weergeven</a>

                    <a class="btn btn-primary" href="{{ path('user_edit', { 'id': user.id }) }}">Aanpassen</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% else %}
        <div>
            <h3>Helaas, u kunt deze pagina niet bekijken.</h3>
            <p>Log in als Administrator om de pagina weer te geven.</p>
        </div>
    {% endif %}
{% endblock %}
